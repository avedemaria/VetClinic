<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loadingFragment">


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.vetclinic.presentation.loginScreen.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_loginFragment_to_resetPasswordWithEmailFragment"
            app:destination="@id/sendResetLinkFragment" />
        <action
            android:id="@+id/action_loginFragment_to_adminHomeFragment"
            app:destination="@id/adminHomeFragment" />
        <action
            android:id="@+id/action_loginFragment_self"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_loginFragment_self2"
            app:destination="@id/loginFragment" />
    </fragment>


    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.vetclinic.presentation.loginScreen.registrationFragment.RegistrationFragment"
        android:label="RegistrationFragment">
        <action
            android:id="@+id/action_registrationFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.vetclinic.presentation.mainScreen.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/sendResetLinkFragment"
        android:name="com.example.vetclinic.presentation.sendResetLinkScreen.SendResetLinkFragment"
        android:label="ResetPasswordWithEmailFragment" >
        <argument
            android:name="email"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/updatePasswordFragment"
        android:name="com.example.vetclinic.presentation.updatePasswordScreen.UpdatePasswordFragment"
        android:label="Update Password"
        tools:layout="@layout/fragment_update_password">
        <argument
            android:name="token"
            app:argType="string"
            app:nullable="false" />
        <deepLink
            app:uri= "vetclinic://reset-password?token={token}"/>
        <action
            android:id="@+id/action_updatePasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loadingFragment"
        android:name="com.example.vetclinic.presentation.loginScreen.LoadingFragment"
        android:label="fragment_loading"
        tools:layout="@layout/fragment_loading" >
        <action
            android:id="@+id/action_loadingFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_loadingFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_loadingFragment_to_adminHomeFragment"
            app:destination="@id/adminHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/adminHomeFragment"
        android:name="com.example.vetclinic.presentation.adminScreen.AdminHomeFragment"
        android:label="AdminHomeFragment" >
        <action
            android:id="@+id/action_adminHomeFragment2_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>