<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.vetclinic.presentation.fragment.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_loginFragment_to_resetPasswordWithEmailFragment"
            app:destination="@id/resetPasswordWithEmailFragment" />
    </fragment>


    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.vetclinic.presentation.fragment.RegistrationFragment"
        android:label="RegistrationFragment">
        <action
            android:id="@+id/action_registrationFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.vetclinic.presentation.fragment.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="userId"
            app:argType="string"
            android:defaultValue="NULL" />
    </fragment>
    <argument
        android:name="userId"
        app:argType="string" />
    <fragment
        android:id="@+id/resetPasswordWithEmailFragment"
        android:name="com.example.vetclinic.presentation.fragment.ResetPasswordWithEmailFragment"
        android:label="ResetPasswordWithEmailFragment" >
        <argument
            android:name="email"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/updatePasswordFragment"
        android:name="com.example.vetclinic.presentation.fragment.UpdatePasswordFragment"
        android:label="Update Password"
        tools:layout="@layout/fragment_update_password">
        <argument
            android:name="token"
            app:argType="string"
            app:nullable="false" />
        <deepLink
            app:uri= "vetclinic://reset-password?token={token}"/>
        <action
            android:id="@+id/action_updatePasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_updatePasswordFragment_to_updatePasswordFragment"
            app:destination="@id/updatePasswordFragment" />
    </fragment>

</navigation>