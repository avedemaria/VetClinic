<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selection_nav_graph"
    app:startDestination="@id/selectionFragment">

    <fragment
        android:id="@+id/selectionFragment"
        android:name="com.example.vetclinic.presentation.fragment.SelectionFragment"
        android:label="Selection"
        tools:layout="@layout/fragment_selection">
        <argument
            android:name="userName"
            app:argType="string"
            android:defaultValue="" />
        <action
            android:id="@+id/action_selectionFragment_to_doctorsFragment"
            app:destination="@id/doctorsFragment" />
    </fragment>

    <fragment
        android:id="@+id/doctorsFragment"
        android:name="com.example.vetclinic.presentation.fragment.DoctorsFragment"
        android:label="Doctors"
        tools:layout="@layout/fragment_doctors" />
</navigation>