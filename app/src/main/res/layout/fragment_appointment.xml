<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleGroup"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:checkedButton="@id/btnUser"
        app:selectionRequired="true"
        android:backgroundTint="@android:color/transparent"
        app:dividerColor="@android:color/transparent"
        android:elevation="6dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUser"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Приемы"
            android:textColor="@color/toggle_button_text"
            app:backgroundTint="@color/toggle_button_background"
            app:strokeColor="@color/toggle_button_stroke"
            app:cornerRadius="10dp"
            android:paddingHorizontal="32dp"
            android:paddingVertical="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPet"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Архив"
            android:textColor="@color/toggle_button_text"
            app:backgroundTint="@color/toggle_button_background"
            app:strokeColor="@color/toggle_button_stroke"
            app:cornerRadius="10dp"
            android:paddingHorizontal="32dp"
            android:paddingVertical="8dp"/>
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp" />
</LinearLayout>

