<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.CurrentAppointmentsFragment">

    <LinearLayout
        android:id="@+id/appointmentContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/llButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_weight="1"
                android:contentDescription="@string/button_calendar"
                android:padding="8dp"
                android:src="@drawable/baseline_calendar_month_24" />



            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="false"
                android:layout_weight="4"
                android:contentDescription="@string/disabled_empty_button"
                android:backgroundTint="@color/dark_grey"
                android:padding="8dp"
                android:layout_margin="12dp"/>


            <ImageButton
                android:id="@+id/btnAdminLogOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:src="@drawable/baseline_exit_to_app_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/button_admin_exit"
                android:layout_weight="1"
                android:padding="8dp"/>

        </LinearLayout>




        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_appointments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/btnCalendar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_appointment_admin" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvEmptyAppointments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/appointments_are_not_available"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginBottom="60dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnCalendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>